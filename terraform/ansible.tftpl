[web]
%{ for host in web_hosts ~}
${host.name} ansible_host=${host.address} fqdn=${host.fqdn}
%{ endfor ~}

[main]
%{ for host in main_hosts ~}
${host.name} ansible_host=${host.address} fqdn=${host.fqdn}
%{ endfor ~}

[replica]
%{ for host in replica_hosts ~}
${host.name} ansible_host=${host.address} fqdn=${host.fqdn}
%{ endfor ~}

[storage]
%{ for host in storage_hosts ~}
${host.name} ansible_host=${host.address} fqdn=${host.fqdn}
%{ endfor ~}
